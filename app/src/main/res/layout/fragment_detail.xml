<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.spotifystreamer.DetailActivityFragment"
    tools:showIn="@layout/activity_detail"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_text2"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:background="#000000"
        android:gravity="center_horizontal"
        android:padding="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >


    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/image_view1"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/detail_text1"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:id="@+id/detail_text3"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/detail_text1"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@id/detail_text1"
            android:layout_toRightOf="@id/detail_text3"
            android:text="/10"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="Mark this movie as favorite"
            android:textColor="#FFFFFF"
            android:layout_below="@id/detail_text3"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:id="@+id/fav_button"/>
    </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail_text"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_marginRight="5dp"
        />
    <!--<GridView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:numColumns="auto_fit"-->
        <!--android:id="@+id/gridview1">-->
    <!--</GridView>-->

    <!--<ListView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/listview1"></ListView>-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trailers"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trailer1"
        android:onClick="open_trailer"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trailer_full_list"
        android:text="ALL Trailers Here"
        android:layout_gravity="center_horizontal"
        android:onClick="trailers_all"
        android:background="#000000"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reviews"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review1"
        android:text="No Reviews Found"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/review_full_list"
        android:text="ALL Reviews Here"
        android:layout_gravity="center_horizontal"
        android:onClick="reviews_all"
        android:background="#000000"
        android:textColor="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="15dp"/>

    </LinearLayout>
</ScrollView>
